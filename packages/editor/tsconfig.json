{
  "extends": "../../scripts/tsconfig.base.json",
  "compilerOptions": {
    /* Bundler mode */
    "outDir": "../../dist/editor",
    "rootDir": ".",

    "paths": {
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@types": ["./app/types.ts"],
      "@catalog/*": ["../core/components/catalog/*"],
      "@seldon/core/*": ["../core/*"],
      "@seldon/factory/*": ["../factory/*"]
    }
  },
  "include": ["./**/*"],
  "references": [
    { "path": "../core/tsconfig.json" },
    { "path": "../factory/tsconfig.json" },
    { "path": "../shared/tsconfig.json" }
  ]
}
