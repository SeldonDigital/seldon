{
  "extends": "../../scripts/tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "outDir": "./dist"
  },
  "exclude": ["./dist", "node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "references": [{ "path": "../core/tsconfig.json" }]
}
